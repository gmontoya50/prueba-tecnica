{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["vite/client", "jest", "node", "@testing-library/jest-dom"]
  },
  "include": ["src", "vite-env.d.ts", "**/*.test.ts", "**/*.test.tsx"]
}
